destination "Tokyo" {
    spot "Tokyo Tower" {
        description "One of Tokyo's iconic landmarks, standing about 333 meters tall."
    }
    spot "Senso-ji Temple" {
        description "One of Tokyo's oldest Buddhist temples, with a long history and cultural heritage."
    }
}

